{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block main %}
    <section class="container">
        <div class="row">
            <div class="col">
                <h1 class="h3 m-3 font-weight-normal text-center">Inscription</h1>
                    <div class="col text-center">

                        {{ form_start(registrationForm) }}
                            {{ form_row(registrationForm.gender) }}
                            {{ form_row(registrationForm.firstname) }}
                            {{ form_row(registrationForm.lastname) }}
                            {{ form_row(registrationForm.nickname) }}
                            {{ form_row(registrationForm.email) }}
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Mot de passe'
                            }) }}
                            {{ form_row(registrationForm.RGPDConsent) }}
                            <button type="submit" class="btn btn-success m-3">S'enregistrer</button>
                            <a class="btn btn-primary  m-3" href="{{path('app_login')}}">Se connecter</a>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
{% endblock %}
