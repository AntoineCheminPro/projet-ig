{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}
<main>

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que :  {{ app.user.userIdentifier }}</a>
            </div>
        {% endif %}
        <div class="container">
            <h1 class="h3 m-3 font-weight-normal text-center">Me connecter</h1>
            <div class="row justify-content-center v-100">
                <label for="inputEmail" class="text-center m-3">Adresse mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control w-50 my-2" autocomplete="email" required autofocus>
                
                <label for="inputPassword" class="text-center m-3">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control w-50 my-2" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
             <div class="col text-center">
                <button class="btn btn-lg btn-success m-4 center" type="submit">
                    Me connecter
                </button>
                <a class="btn btn-lg btn-primary m-4 center" href="{{path('app_register')}}">M'inscrire</a>
            </div>

        </div>

    </form>

</main>
{% endblock %}
